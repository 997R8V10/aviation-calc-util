<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <RunId Condition="'$(RuntimeIdentifier)' == '' And $([MSBuild]::IsOSPlatform('Windows'))">win-$(Platform)</RunId>
        <RunId Condition="'$(RuntimeIdentifier)' == '' And $([MSBuild]::IsOSPlatform('Linux'))">linux-$(Platform)</RunId>
        <RunId Condition="'$(RuntimeIdentifier)' == '' And $([MSBuild]::IsOSPlatform('OSX'))">osx-$(Platform)</RunId>
        <RunId Condition="'$(RunId)' == ''">$(RuntimeIdentifier)</RunId>
    </PropertyGroup>
    <ItemGroup>
        <None Include="$(MSBuildThisFileDirectory)/../runtimes/$(RunId)/**/*.*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <Link>%(FileName)%(Extension)</Link>
        </None>
    </ItemGroup>
    <ItemGroup>
        <NativeDepFiles Include="$(MSBuildThisFileDirectory)/../runtimes/$(RunId)/**/*.*" />
    </ItemGroup>
    <Target Name="CopyNativeDepFiles" AfterTargets="Build">
        <Copy SourceFiles="@(NativeDepFiles)" DestinationFolder="$(TargetDir)" />
    </Target>
</Project>