<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup>
        <Content Include="$(MSBuildThisFileDirectory)..\..\lib\native\**\*.*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <Link>%(FileName)%(Extension)</Link>
        </Content>
    </ItemGroup>
    <Target Name="AfterBuild">
        <ItemGroup>
            <_Definitions Include="$(MSBuildThisFileDirectory)..\..\lib\netstandard2.0\**\*.*" />
        </ItemGroup>
        <Copy SourceFiles="@(_Definitions)"
          DestinationFiles="@(_Definitions->'$(TargetDir)%(RecursiveDir)%(Filename)%(Extension)')"
          UseHardlinksIfPossible="true"
          SkipUnchangedFiles="true" />
    </Target>
</Project>